{
  "name": "autostat-api",
  "version": "1.0.0",
  "description": "AutoStat API Server",
  "main": "dist/lambda.js",
  "scripts": {
    "build": "rm -rf dist && tsc && cp package.json tsconfig.json dist/ && cd dist && npm install --production",
    "start": "ts-node -r tsconfig-paths/register src/server.ts",
    "dev:express": "nodemon -r tsconfig-paths/register src/server.ts",
    "dev": "concurrently \"npm run watch:build\" \"npm run watch:server\"",
    "watch:build": "tsc-watch --onSuccess \"cp package.json tsconfig.json dist/ && cd dist && npm install --production\"",
    "watch:server": "serverless offline",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "migrate": "ts-node -r tsconfig-paths/register src/db/migrate.ts",
    "migrate:down": "ts-node -r tsconfig-paths/register src/db/migrate.ts down",
    "deploy": "serverless deploy",
    "deploy:prod": "serverless deploy --stage prod",
    "type-check": "tsc --noEmit",
    "lint": "eslint --fix \"src/**/*.{ts,tsx}\""
  },
  "dependencies": {
    "@types/aws-lambda": "^8.10.136",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.11.24",
    "@types/pg": "^8.11.2",
    "aws-lambda": "^1.0.7",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "serverless-http": "^3.2.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.126",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.16",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.9.0",
    "@types/supertest": "^2.0.16",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "serverless-offline": "^13.2.1",
    "serverless-plugin-typescript": "^2.1.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
