{
  "name": "artemis-api",
  "version": "1.0.0",
  "description": "Artemis API Server",
  "main": "dist/lambda.js",
  "scripts": {
    "build": "tsc",
    "start": "ts-node -r tsconfig-paths/register src/server.ts",
    "dev:express": "nodemon -r tsconfig-paths/register src/server.ts",
    "dev": "serverless offline",
    "test": "vitest",
    "migrate": "ts-node -r tsconfig-paths/register src/db/migrate.ts",
    "migrate:down": "ts-node -r tsconfig-paths/register src/db/migrate.ts down",
    "deploy": "serverless deploy",
    "deploy:prod": "serverless deploy --stage prod"
  },
  "dependencies": {
    "@types/aws-lambda": "^8.10.136",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.11.24",
    "@types/pg": "^8.11.2",
    "aws-lambda": "^1.0.7",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "serverless-http": "^3.2.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/uuid": "^9.0.8",
    "nodemon": "^3.1.0",
    "serverless": "^3.38.0",
    "serverless-offline": "^13.3.3",
    "serverless-plugin-typescript": "^2.1.5",
    "ts-node": "^10.9.2",
    "vitest": "^1.3.1"
  }
}
