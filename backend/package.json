{
  "name": "prometheus-backend",
  "version": "1.0.0",
  "description": "Backend service for Prometheus",
  "main": "dist/app.js",
  "scripts": {
    "start": "node dist/app.js",
    "dev": "nodemon --exec ts-node -r tsconfig-paths/register src/app.ts",
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "migrate": "ts-node -r tsconfig-paths/register src/app.ts migrate",
    "migrate:down": "ts-node -r tsconfig-paths/register src/app.ts migrate down",
    "type-check": "tsc --noEmit",
    "lint": "eslint --fix \"src/**/*.ts\""
  },
  "type": "commonjs",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.0",
    "pg-pool": "^3.10.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.1",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/node": "^22.15.17",
    "@types/pg": "^8.15.2",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^3.2.2",
    "eslint-plugin-vitest-globals": "^1.5.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.2"
  }
}
