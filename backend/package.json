{
  "name": "autostat-api",
  "version": "1.0.0",
  "description": "AutoStat API Server",
  "main": "dist/lambda.js",
  "scripts": {
    "build": "rm -rf dist && tsc && cp package.json tsconfig.json dist/ && cd dist && npm install --production",
    "start": "ts-node -r tsconfig-paths/register src/server.ts",
    "dev:express": "nodemon -r tsconfig-paths/register src/server.ts",
    "dev": "concurrently \"npm run watch:build\" \"npm run watch:server\"",
    "watch:build": "tsc-watch --onSuccess \"cp package.json tsconfig.json dist/ && cd dist && npm install --production\"",
    "watch:server": "serverless offline",
    "test": "NODE_ENV=test vitest run",
    "test:watch": "NODE_ENV=test vitest",
    "test:coverage": "NODE_ENV=test vitest run --coverage",
    "migrate": "ts-node -r tsconfig-paths/register src/db/migrate.ts",
    "migrate:down": "ts-node -r tsconfig-paths/register src/db/migrate.ts down",
    "migrate:local": "ts-node -r tsconfig-paths/register src/db/migrate.ts up local",
    "migrate:local:down": "ts-node -r tsconfig-paths/register src/db/migrate.ts down local",
    "migrate:dev": "ts-node -r tsconfig-paths/register src/db/migrate.ts up dev",
    "migrate:dev:down": "ts-node -r tsconfig-paths/register src/db/migrate.ts down dev",
    "deploy": "serverless deploy",
    "deploy:prod": "serverless deploy --stage prod",
    "type-check": "tsc --noEmit",
    "lint": "eslint --fix \"src/**/*.{ts,tsx}\"",
    "build:lambda": "ts-node scripts/build-lambda.ts",
    "deploy:lambda": "ts-node scripts/deploy-migration-lambda.ts",
    "package:lambda": "cd dist/lambda && zip -r migrate.zip migrate.js* config/",
    "create:iam": "ts-node scripts/create-iam-resources.ts",
    "create:vpc-endpoints": "ts-node scripts/create-vpc-endpoints.ts",
    "create:lambda-sg": "ts-node scripts/create-lambda-sg.ts",
    "migrate:lambda": "ts-node scripts/invoke-migration.ts",
    "get:vpc": "ts-node scripts/get-vpc-details.ts"
  },
  "dependencies": {
    "@aws-sdk/client-ec2": "^3.828.0",
    "@aws-sdk/client-lambda": "^3.828.0",
    "@aws-sdk/client-ssm": "^3.826.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.11.24",
    "@types/pg": "^8.11.2",
    "aws-lambda": "^1.0.7",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "esbuild": "^0.25.5",
    "express": "^4.18.3",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "serverless-http": "^3.2.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.149",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.16",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.9.0",
    "@types/supertest": "^2.0.16",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "serverless-offline": "^13.2.1",
    "serverless-plugin-typescript": "^2.1.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
