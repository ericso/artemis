{
  "name": "prometheus-monorepo",
  "version": "1.0.0",
  "description": "Prometheus Monorepo",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "start": "npm run start --workspace=backend",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspace=backend && npm run test --workspace=frontend",
    "test:coverage": "npm run test:coverage --workspaces",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint --workspaces",
    "type-check": "npm run type-check --workspaces",
    "check": "npm run test && npm run lint && npm run type-check"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-vitest": "^0.3.20",
    "eslint-plugin-vitest-globals": "^1.5.0",
    "postcss": "^8.5.4",
    "tailwindcss": "^4.1.8",
    "tsc-watch": "^7.1.1",
    "typescript": "~5.0.4"
  }
}
